
<div class="backListCelebs">  
    <div class="cardCeleb">
        <form action="/movies/movies/{{movie._id}}/edit" method="post">
            <input type="text" name="title" value="{{movie.title}}">
            <input type="text" name="genre" value="{{movie.genre}}">
            <input type="text" name="plot"  value="{{movie.plot}}">    
            <p>Cast</p> 
            <select name="cast" multiple>
                {{#each celebs}}
                    <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select> 
            <button type="submit">Update movie</button>
        </form> 
    </div>
</div>
